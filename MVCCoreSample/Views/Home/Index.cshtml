@* Loops and Collections *@
@* for *@
@{
	string[] tellers = { "John", "Gemma", "Jax" };
	string surname = "Teller";
}

@for (int i = 0; i < tellers.Length; i++)
{
	<p>@tellers[i] <b>@surname</b></p>
}


@* foreach *@
<ul class="list-group">
	@foreach (var item in tellers)
	{
		<li class="list-group-item">@item <b>@surname</b></li>
	}
</ul>

