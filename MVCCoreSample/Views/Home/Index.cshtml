@* Conditional Statements *@

@{
	int num = 28;
}

@{
	if (num < Age)
	{
		<span>num(@num) value is less than age value <b>@Age</b>.</span>
	}
	else if (num > Age)
	{
		<span>num(@num) value is bigger than age value <b>@Age</b>.</span>
	}
	else
	{
		<span>num(@num) value is equal to age value(<b>@Age</b>).</span>
	}
}

